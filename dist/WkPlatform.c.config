#include "WkPlatform.h"

/* Basic C function to display Wk Configuration on runtime */
#include <stdio.h>

/*WK_LOCAL*/ int WkDebug()
{
    printf ( "\n%s has been built with WkCMake \n", PROJECT_NAME );
    printf ( "Build Platform : %s\n", WK_PLATFORM );
    printf ( "Build System : %s %s %s\n", WK_SYSTEM_NAME, WK_SYSTEM_VERSION, WK_SYSTEM_PROCESSOR );
    printf ( "Compiler used : %s\n", WK_COMPILER );
    printf ( "The following external dependencies were detected :\n");
#ifdef WK_SDLIMAGE_FOUND
    printf ( "- SDL_image\n" ) ;
#endif
#ifdef WK_SDLMIXER_FOUND
    printf ( "- SDL_mixer\n" );
#endif
#ifdef WK_SDLTTF_FOUND
    printf ( "- SDL_ttf\n" );
#endif
#ifdef WK_SDLNET_FOUND
    printf ( "- SDL_net\n" );
#endif
#ifdef WK_OPENGL_FOUND
    printf ( "- OpenGL\n" );
#endif
#ifdef WK_GUICHAN_FOUND
    printf ( "- GUIchan\n");
#endif

    return 0;
}


